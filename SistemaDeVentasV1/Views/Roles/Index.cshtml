@model IEnumerable<SistemaDeVentasV1.Models.AspNetRoles>

@{
    ViewBag.Title = "Roles de Usuarios";
    ViewBag.TituloControlador = "ROLES";
    ViewBag.InfoPagina = "Gestion de Roles de Usuarios";
    ViewBag.TituloVentana = "Roles Registrados";
    ViewBag.FooterVentana = "No se podran eliminar algunos roles para conservar la integridad de los datos";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

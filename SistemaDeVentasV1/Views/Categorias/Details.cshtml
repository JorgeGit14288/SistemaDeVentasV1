@model SistemaDeVentasV1.Models.Categorias

@{
    ViewBag.Title = "Detalles de Categorias";
    ViewBag.TituloControlador = "CATEGORIAS DE PRODUCTOS";
    ViewBag.InfoPagina = "Informacion registrada sobre la Categoria";
    ViewBag.TituloVentana = "Informacion";
    ViewBag.FooterVentana = "Puede editar y actualizar este registro, click en el boton editar";
    Layout = "~/Views/Shared/Plantilla1.cshtml";
}


<div>

    <dl class="dl-horizontal">
        <dt>
            <label>Id Categoria: </label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.idCategoria)
        </dd>
        <dt>
            <label>Nombre: </label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
           <label>Descripcion: </label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.imagen)
        </dt>

        <dd>
            <img width="280" height="250" src="@Url.Action("ConvertirImagen", "Categorias", new {idCategoria = Model.idCategoria})" />
        </dd>

    </dl>
</div>
<br />
<br />
<br />
<p>
    <input type="button" class="btn btn-info" value="Actualizar Registro" onclick="location.href='@Url.Action("Edit", "Categorias", new {id = Model.idCategoria })'" /> |
    <input type="button" class="btn btn-danger" value="Eliminar Registro" onclick="location.href='@Url.Action("Delete", "Categorias", new {id = Model.idCategoria })'" /> |
    <a href="@Url.Action("Index","Categorias")" class="btn btn-success">Regresar a la lista</a></p>

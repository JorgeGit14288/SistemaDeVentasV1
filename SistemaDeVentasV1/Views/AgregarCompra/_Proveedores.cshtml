@using SistemaDeVentasV1.Models;
@{
    Proveedores proveedor = new Proveedores();
    if (Session["Proveedor"].ToString() == "" || Session["Proveedor"] == null)
    {
        proveedor = new Proveedores();
    }
    else
    {
        proveedor = (Proveedores)Session["Proveedor"];
    }
    List<Proveedores> proveedores = new List<Proveedores>();

    if (ViewBag.Proveedores == null || ViewBag.Proveedores == "")
    {

    }
    else
    {
        proveedores = (List<Proveedores>)ViewBag.Proveedores;
    }
}

<div class="row">
    <div class="col-md-12">
        <div class="col-md-2"></div>
        <form id="fBuscarProveedor" action="BuscarProveedor" method="post" class="form-inline">
            <div class="form-group">
                <label >Proveedor:</label>
                <input list="proveedores" name="idProveedor" id="idProveedor" placeholder="Id o Empresa" class="form-control" required />
                <datalist id="proveedores">
                    @{
                        foreach (var p in proveedores)
                        {
                            <option value="@p.idProveedor">@p.empresa ,  @p.nombre</option>
                        }
                    }
                </datalist>
                <input type="submit" value="Buscar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <center><h4>Datos del Proveedor</h4></center>
        <form id="fCargarProveedor" action="CargarProveedor" method="post" class="form-horizontal">
            <div class="form-inline">
                <div class="row col-md-12">
                    <div class="col-md-4">
                        <div class="col-md-4">
                            Id:
                        </div>
                         <input type="text" name="idProveedor" id="idProveedor" value="@proveedor.idProveedor" required class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-4">
                            Empresa
                        </div>
                        <input type="text" name="empresa" id="empresa" value="@proveedor.empresa" required class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-4">
                            Contacto
                        </div>
                        <input type="text" name="nombre" id="nombre" value="@proveedor.nombre" required class="form-control" />
                    </div>
                </div>
            </div>
            <br />
            <div class="form-inline">
                <div class="row col-md-12">

                    <div class="col-md-4">
                        <div class="col-md-4">
                            Tel:
                        </div>
                        <input type="tel" name="telefono" id="telefono" value="@proveedor.telefono" required class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-4">
                            Direccion:
                        </div>
                        <input type="text" name="direccion" id="direccion" value="@proveedor.direccion" required class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <div class="col-md-4">
                            Email:
                        </div>
                        <input type="email" name="email" id="email" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="row col-md-12">
                <div class="col-md-4"></div>
                <div class="form-inline">
                    <input type="submit" value="Cargar Proveedor" class="btn btn-primary" />
                    <input type="reset" value="Borrar Datos" class="btn btn-warning" />
                </div>
            </div>

        </form>
    </div>
</div>
